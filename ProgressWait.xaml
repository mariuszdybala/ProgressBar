<Window x:Class="DynamicSplashScreen.ProgressWait"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DynamicSplashScreen"
        mc:Ignorable="d"
        Title="ProgressWait" Height="25" Width="200" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <ProgressBar Minimum="0" Maximum="100" Name="pbStatus" IsIndeterminate="True"/>
    </Grid>
</Window>
